class LightBulb
{
  Integer v = 0;
  status
  {
    On { 
      entry / { v = 1; } 
      flip -> Off;
    }
    Off { 
      entry / { v = 2; }
      flip -> On;
    }
    // trace whenever we enter/exit state On 
    trace On;
    // trace whenever we exit state Off and report value of attribute v 
    trace exit Off record v;
  }
}