			PreparedStatement stmDeleteAR = conn.prepareStatement("DELETE FROM ACTUALRUNS WHERE RUNID = ?");
			stmDeleteAR.setLong(1, run.getEntityId());
			
			int result = stmDeleteAR.executeUpdate();
			stmDeleteAR.close();
