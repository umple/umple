			PreparedStatement gettt = conn
					.prepareStatement("SELECT timetableid FROM timetablesinschedules WHERE scheduleid=?");
			gettt.setInt(1, id);
			List<LineTimeTable> allLineTimeTables = new ArrayList<LineTimeTable>();
