//Namespace for core of the system.
namespace Geneology.core;

class Person{
 name;
 sex;
 placeOfBirth;
 dateOfBirth;
 placeOfDeath;
 dateOfDeath;
}

class Union{
 placeOfMarriage;
 dateOfMarriage;
 dateOfDivorce;
 * -- 0..2 Person parent;
}

class Adoption {
 dateOfAdoption;
 * -- 0..1 Union adoptiveParents;
 * -- 0..1 Person adoptedChild;
}

association {
 * Person child -- 0..1 Union parents;
}
//$?[End_of_model]$?

//Positioning
class Person
{
  position 223 18 167 147;
}

